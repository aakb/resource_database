{% extends 'base.html.twig' %}

{% block title %}Resource index{% endblock %}

{% block body %}
    <h1>Resource index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Type</th>
                <th>ExchangeId</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for resource in resources %}
            <tr>
                <td>{{ resource.id }}</td>
                <td>{{ resource.name }}</td>
                <td>{{ resource.type }}</td>
                <td>{{ resource.exchangeId }}</td>
                <td>
                    <a href="{{ path('resource_show', {'id': resource.id}) }}">show</a>
                    <a href="{{ path('resource_edit', {'id': resource.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('resource_new') }}">Create new</a>
{% endblock %}
